{
  "swagger": "2.0",
  "info": {
    "title": "Parent_followup API",
    "description": "API documentation for parent_followup with all CRUD operations",
    "version": "1.0.0"
  },
  "host": "localhost:3500",
  "basePath": "",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/signUp": {
      "post": {
        "summary": "Create account",
        "description": "Create a new account on parent_followup",
        "tags": ["Signup"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/User"
            },
            "required": true,
            "description": "User object"
          }
        ],
        "responses": {
          "201": {
            "description": "Account created successfully"
          }
        }
      }
    },
   
    "/login": {
      "post": {
        "summary": "Login user",
        "description": "Authenticate and login user",
        "tags": ["User Signin"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Login"
            },
            "required": true,
            "description": "User credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful login"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/otp-verify": {
      "post": {
        "summary": "Verify account",
        "description": "Verify your account on parent_followup",
        "tags": ["OTP USER VERIFICATION"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Otp"
            },
            "required": true,
            "description": "User object"
          }
        ],
        "responses": {
          "201": {
            "description": "Account verified successfully"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Get all users",
        "description": "Retrieve a list of all users",
        "tags": ["All Users Registered"],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "summary": "Get user by ID",
        "description": "Retrieve a user by their ID",
        "tags": ["Get user by Id"],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "type": "string",
            "description": "ID of the user to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "put": {
        "summary": "Update user",
        "description": "Update user information",
        "tags": ["Update User"],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "type": "string",
            "description": "ID of the user to update"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/User"
            },
            "required": true,
            "description": "Updated user object"
          }
        ],
        "responses": {
          "200": {
            "description": "User updated successfully"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "delete": {
        "summary": "Delete user",
        "description": "Delete a user by their ID",
        "tags": ["Delete User"],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "type": "string",
            "description": "ID of the user to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "User deleted successfully"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "FirstName": {
          "type": "string"
        },
        "LastName": {
          "type": "string"
        },
        "Email": {
          "type": "string"
        },
        "Password": {
          "type": "string"
        },
        "ConfirmPassword": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "description":"role of the user",
          "default":"user"
        }
      },
      "required": [
        "FirstName",
        "LastName",
        "Email",
        "Password",
        "ConfirmPassword",
        "role"
      ]
    },
    "Otp": {
      "type": "object",
      "properties": {
        "otp": {
          "type": "number"
        }
      },
      "required": ["otp"]
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },

        "role":
        {
            "type":"string",
            "description":"role of the User",
            "default":"user"

        }
      },
      "required": ["email", "password","role"]
    }
  }
}
